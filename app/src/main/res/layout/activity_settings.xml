<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Configuration"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tvSensHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion Sensitivity"
        android:textColor="#CF6679"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvSensLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current: Medium (2.0G)"
        android:textColor="#AAAAAA"
        android:layout_marginBottom="10dp"/>

    <SeekBar
        android:id="@+id/seekBarSens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="20"
        android:layout_marginBottom="30dp"/>

    <Switch
        android:id="@+id/swSilent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silent Alarm (Stealth Mode)"
        android:textColor="#CF6679"
        android:textSize="18sp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/tvSilentDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If active, the alarm sound will be muted to capture evidence secretly."
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save and Return"
        android:layout_marginTop="40dp"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF"/>

</LinearLayout>